@{
    ViewData["Title"] = "TravelBook";
}

@model List<StudyProject.Models.Country>

<!-- Banner -->
<div id="banner-wrapper">
    <div id="banner" class="box container">
        <div class="row">
            <div class="col-7 col-12-medium">
                <h2>Привет. Вы на TravelBook.</h2>
                <p>Здесь, ты найдешь где провести свое лето </p>
            </div>
            <div class="col-5 col-12-medium">
                <ul>
                    <li><a href="/Countries" class="button large icon solid fa-arrow-circle-right">Давай начнем</a></li>
                    <li><a href="/AboutUs" class="button alt large icon solid fa-question-circle">О нас</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Features -->
<div id="features-wrapper">
    <div class="container">
        <div class="row">
            @foreach (var country in Model)
            {
                @if (country.IsHot)
                {
                    <div class="col-4 col-12-medium">

                        <!-- Box -->
                        <section class="box feature">
                            <a href="#" class="image featured"><img src="@country.CardPhotoLink" alt="" /></a>
                            <div class="inner">
                                <header>
                                    <h2>@country.Name</h2>
                                    <p>@country.CardDescription</p>
                                </header>
                                <p>Phasellus quam turpis, feugiat sit amet in, hendrerit in lectus. Praesent sed semper amet bibendum tristique fringilla.</p>
                            </div>
                        </section>
                    
    
                    </div>
                    }
                }
        </div>
    </div>
</div>


