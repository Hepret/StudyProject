@model StudyProject.Models.Country

@{
    ViewBag.Title = "Добавить в избранное";
}

<div>
    <dl class="dl-horizontal">
        <dt>Название страны</dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>Описание</dt>
        <dd>
            @Html.DisplayFor(model => model.CardDescription)
        </dd>

        <dt> Слоган </dt>
        <dd> @Html.DisplayFor(model => model.CardTagline)</dd>
    </dl>

    <div>
        <form asp-controller="Admin" asp-action="AddToHot" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Добавить в избранное" />
            </div>
        </form>
    </div>
</div>