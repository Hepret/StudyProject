@model StudyProject.Models.GalleryImage
@{
    ViewBag.Title = "Добавление Фотографий";
}
<form asp-action="AddImage" asp-controller="admin">
    <div class="form-group">
        <label asp-for="ImageLink" class="control-label">Ссылка на фотографию</label>
        <input type="text" asp-for="ImageLink" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label">Description </label>
        <input type="text" asp-for="Description" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Отправить" class="btn btn-default" />
    </div>
</form>