@model StudyProject.Models.Country
@{
    ViewBag.Title = "Изменение Карточки Страны";
}
<form asp-action="edit" asp-controller="admin">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Имя</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CardDescription" class="control-label">CardDescription </label>
        <input type="text" asp-for="CardDescription" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="CardTagline" class="control-label"> CardTagline </label>
        <input type="text" asp-for="CardTagline" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="CardPhotoLink" class="control-label">CardDescription </label>
        <input type="text" asp-for="CardPhotoLink" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="IsHot" class="control-label">IsHot</label>
        <input type="checkbox" asp-for="IsHot" style="height: 23px; width: 22px;" />
    </div>

    <div class="form-group">
        <input type="submit" value="Отправить" class="btn btn-default" />
    </div>
</form>