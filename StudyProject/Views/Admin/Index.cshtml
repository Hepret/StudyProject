@{
    ViewData["Title"] = "Страны";
}

@model List<StudyProject.Models.Country> 
<!-- Banner -->


<!-- Features -->
<div id="features-wrapper">
    <div class="container">
        <a asp-action="Create">Добавить Страну</a>
        <table class="table">

            @foreach (var country in Model)
            {
                <tr>
                    <td>@country.Name</td>
                    <td>
                        <a asp-action="Details" asp-controller="Admin" asp-route-id="@country.CountryId">Подробнее</a>
                        <a asp-action="Edit" asp-controller="Admin" asp-route-id="@country.CountryId">Изменить</a>
                        <a asp-action="Delete" asp-controller="Admin" asp-route-id="@country.CountryId">Удалить</a>
                        <a asp-action="CreateArticle" asp-controller="Admin" asp-route-id="@country.CountryId"> Добавить статью</a>
                        <a asp-action="AddImage" asp-controller="Admin" asp-route-id="@country.CountryId">Добавить фотографию</a>
                        @if (country.IsHot)
                        {
                            <a asp-action="AddToHot" asp-controller="Admin" asp-route-id="@country.CountryId">Удалить из горячего</a>
                        }
                        else
                        {
                            <a asp-action="AddToHot" asp-controller="Admin" asp-route-id="@country.CountryId">Добавить в горячее</a>
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
</div>


